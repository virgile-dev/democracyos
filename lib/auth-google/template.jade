.google-auth-form.inner-container.small-container
  .title-page
    i.fa.fa-sign-in
    h1= t('signin.login-to') + ' ' + t('common.app-name')
  - if (config.domainWhiteList.length)
    - var domains = config.domainWhiteList
      p!=t('signin.google.domain')
      ul.list-unstyled
        each d in domains
          li= '@' + d
  form(action="#{config.subPath}/auth/google", method="get", role="form")
    button.btn.btn-block.btn-labeled.btn-default.btn-google(type="submit")
      span.btn-label.pull-left: i.fa.fa-google
      span= t('signin.login-with-google')
  p!=t('signin.google.contact',{email: config.organizationEmail})
  - if (config.termsOfService)
    p: a(href="#{config.subPath}/help/terms-of-service")= t('help.tos.title')
  - if (config.privacyPolicy)
    p: a(href="#{config.subPath}/help/privacy-policy")= t('help.pp.title')
